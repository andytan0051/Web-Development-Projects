doctype html
html
    head
        title Weathertop
        link(rel="stylesheet", href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css")
        link(rel="stylesheet", type="text/css", href="/stylesheets/styles.css")
        link(href="https://fonts.googleapis.com/css2?family=Source+Code+Pro&display=swap" rel="stylesheet")
        link(href="https://fonts.googleapis.com/css2?family=Londrina+Outline&family=Source+Code+Pro&display=swap" rel="stylesheet")
        link(href="https://fonts.googleapis.com/css2?family=Varela+Round&display=swap" rel="stylesheet")


    body(id='dashboard')
        nav
            ul
                li
                    a(href='/') Weathertop
                li
                    a(href='/stations') Dashboard

        h1 Dashboard
        div(class="container")

            each station in stations
                div(class="row")
                    div(class="col") #{station.station}
                    div(class="col") Weather
                        p #{reading.weather}
                    div(class="col") Temperature
                        p
                    div(class="col") Wind
                        p
                    div(class="col") Air Pressure
                        p
                a(href="/stations/"+station.id) Details

